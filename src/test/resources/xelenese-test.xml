<suite title="Xeleneseテスト">
  <include src="..."/>

  <template title="">
    <get/>
    <element/>
    <click/>
  </template>

  <!-- driver className="com.shorindo.xelenese.MockDriver"/ -->
  <!-- driver className="org.openqa.selenium.firefox.FirefoxDriver" / -->
  <driver className="org.openqa.selenium.chrome.ChromeDriver"
          driverName="webdriver.chrome.driver"
          driverExec="./exe/chromedriver.exe" />

  <test title="get" depends="">
    <get url="http://localhost:8880/"/>
    <wait timeout="500"/>
  </test>

  <test title="refresh">
    <refresh/>
    <wait timeout="500"/>
  </test>

  <test title="title">
    <title match="test"/>
    <wait timeout="500"/>
  </test>

  <test title="position">
    <position top="10" left="10"/>
    <wait timeout="500"/>
  </test>

  <test title="element">
    <element xpath="//A">
      <!-- 
      <keys/>
      <click/>
      <verify target="..." value="..."/>
      <assert target="..." value="..."/>
      -->
    </element>
  </test>

  <test title="click">
    <element linkText="first">
      <click/>
    </element>
    <title match="first"/>
  </test>

  <test title="keys">
    <element tagName="textarea">
      <keys text="abcd"/>
    </element>
  </test>

  <test title="text">
    <element tagName="h1">
      <text match="First page"/>
    </element>
  </test>

  <test title="back">
    <back/>
    <title match="xelenese test suite."/>
  </test>

  <test title="script">
    <script><![CDATA[
      document.title = "hoge";
    ]]></script>
  </test>

  <test title="onError=ignore" onError="ignore">
    <element xpath="aaa">
      <click/>
    </element>
  </test>

  <test title="onError=fail" onError="failure">
    <element xpath="aaa">
      <click/>
    </element>
  </test>

  <test title="quit">
    <quit/>
  </test>

</suite>
