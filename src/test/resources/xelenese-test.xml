<suite name="Xeleneseテスト">
  <include src="..."/>

  <template name="">
    <get/>
    <element/>
    <click/>
  </template>

  <!-- driver className="com.shorindo.xelenese.MockDriver"/ -->
  <!-- driver className="org.openqa.selenium.firefox.FirefoxDriver" / -->
  <driver className="org.openqa.selenium.chrome.ChromeDriver"
          driverName="webdriver.chrome.driver"
          driverExec="./exe/chromedriver.exe" />

  <test name="get" depends="">
    <get url="http://localhost:8880/"/>
  </test>

  <test name="refresh">
    <refresh/>
  </test>

  <test name="title">
    <title match="test"/>
  </test>

  <test name="position">
    <position top="10" left="10"/>
  </test>

  <test name="element">
    <element xpath="//A">
      <!-- 
      <keys/>
      <click/>
      <verify target="..." value="..."/>
      <assert target="..." value="..."/>
      -->
    </element>
  </test>

  <test name="click">
    <element linkText="first">
      <click/>
    </element>
    <title match="first"/>
  </test>

  <test name="keys">
    <element tagName="textarea">
      <keys keys="abcd"/>
    </element>
  </test>

  <test name="back">
    <back/>
    <title match="xelenese test suite."/>
  </test>

  <test name="script">
    <script><![CDATA[
      document.title = "hoge";
    ]]></script>
  </test>

  <test name="onRrror=ignore" onError="ignore">
    <element xpath="aaa">
      <click/>
    </element>
  </test>

  <test name="onError=fail" onRrror="fail">
    <element xpath="aaa">
      <click/>
    </element>
  </test>
</suite>
