  <driver className="org.openqa.selenium.chrome.ChromeDriver" />

  <test name="トップページ表示" depends="">
    <get url="http://shorindo.com"/>
    <!--
    <close/>
    <back/>
    <forward/>
    -->
    <refresh/>
    <position top="10" left="10"/>
 
    <element xpath="//A">
      <keys/>
      <click/>
      <verify target="..." value="..."/>
      <assert target="..." value="..."/>
    </element>
  </test>

  <test name="エラー発生対応" onError="continue">
    <element xpath="aaa">
      <click/>
    </element>
    <get url="http://shorindo.com"/>
  </test>

  <test name="スクリプトでタイトル変更" onError="continue">
    <element className="label">
      <text/>
      <click/>
    </element>
    <script><![CDATA[
      document.title = "hoge";
    ]]></script>
  </test>
